<% if current_user %>
  <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: 'pull-right' %>
  <%= react_component 'photoFeed', { data: { currentUser: current_user.as_json } }  %>

<% else %>
  <div id='authorization'>
    <div id='signUp'>
      <div class='row'>
        <div class='col-sm-6 center-block no-float'>
          <h2 class='carbon centered'>Welcome to PhotoBucket</h2>
          <h3 class='carbon centered'>Please sign up to continue.</h3>
          <div class='row'>
            <div class='col-sm-6 center-block no-float'>

              <%= form_for(:user, as: :user, url: registration_path(:user), html: { class: 'centered' }) do |f| %>

                <div class="field">
                  <%= f.text_field :name, autofocus: true, placeholder: 'Name', class: 'full-bleed margined', required: true %>
                </div>

                <div class="field">
                  <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'full-bleed margined', required: true %>
                </div>

                <div class="field">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'full-bleed margined' %>
                </div>

                <div class="field">
                  <%= f.check_box :terms, required: 'true', class: 'margined' %>
                  I agree to the terms & conditions.
                </div>

                <div class="actions">
                  <%= f.button "Sign up", class: 'full-bleed btn-default signup margined' %>
                </div>
              <% end %>
              <div class='centered'>Already a member? <span class='pointer underlined' id='showSignIn'>Sign In</span></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id='signIn' class='hidden'>
      <div class='row'>
        <div class='col-sm-6 center-block no-float'>
          <h2 class='carbon centered'>Welcome to PhotoBucket</h2>
          <h3 class='carbon centered'>Please log in to continue.</h3>
          <div class='row'>
            <div class='col-sm-6 center-block no-float'>

              <%= form_for(:user, as: :user, url: session_path(:user), html: { class: 'centered' }) do |f| %>

                <div class="field">
                  <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'full-bleed margined', required: true %>
                </div>

                <div class="field">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'full-bleed margined', required: true %>
                </div>

                <div class="field">
                  <%= f.check_box :terms, required: 'true', class: 'margined' %>
                  I agree to the terms & conditions.
                </div>

                <div class="actions">
                  <%= f.button "Sign up", class: 'full-bleed btn-default signup margined' %>
                </div>
              <% end %>
              <div class='centered'>Not a member yet? <span class='pointer underlined' id='showSignUp'>Sign Up</span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
